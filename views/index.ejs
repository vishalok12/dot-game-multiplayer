<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Dot Game</title>
        <meta name="description" content="A Multiplayer Dot game using socket.io. Enjoy Playing!!">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="css/style.css">
    </head>

    <body onload="initialize();">

    	<!--[if lt IE 8]>
    		<p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    	<![endif]-->

        <div id="overlay">
            <div id="game-over">
                <button id="game-start-btn">Start New Game</button>
            </div>
            <div id="game-link">
                <div><span>Send this link to your opponent</span></div>
                <div class="opponent-link-wrapper">
                    <input class="opponent-game-link" readonly="readonly">
                    <span id="copy-button" class="copy-clipboard" title="Copy to Clipboard"></span>
                </div>
            </div>
            <div id="input-wrapper" class="input-group">
                <input id="user-name" type="text" class="form-control" placeholder="Enter Your Name">
                <span class="input-group-btn">
                    <button id="submit-btn" class="btn btn-success" type="button">Done</button>
                </span>
            </div>
        </div>

        <div id="wrapper">
            <canvas width="280" height="450" id="game-area">Your browser doesn't support canvas</canvas>
        </div>
        <!-- socket.io -->
        <script src="/socket.io/socket.io.js"></script>
        <!-- vendor js -->
        <script type="text/javascript" src="js/underscore.js"></script>
        <script type="text/javascript" src="js/ZeroClipboard/ZeroClipboard.min.js"></script>

        <!-- game js files -->
        <script type="text/javascript" src="js/blockgraph.js"></script>
        <script type="text/javascript" src="js/bot.js"></script>
        <script type="text/javascript" src="js/app.js"></script>

    </body>
</html>
